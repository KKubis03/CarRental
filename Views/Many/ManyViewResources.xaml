<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Title" TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Height" Value="22"/>
    </Style>
    <Style x:Key="Combo" TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderBrush" Value="DimGray"/>
        <Setter Property="Width" Value="100"/>
    </Style>
    <Style x:Key="Box" TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderBrush" Value="DimGray"/>
        <Setter Property="Width" Value="100"/>
    </Style>
</ResourceDictionary>